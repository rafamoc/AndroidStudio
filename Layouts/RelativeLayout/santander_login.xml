<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redBrand"
    android:padding="0dp">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:background="@color/redBrand"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/santander_icon"
            android:layout_centerVertical="true"
            android:contentDescription="Logo Santander" />
        <TextView
            android:id="@+id/logoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/logo"
            android:layout_alignTop="@id/logo"
            android:layout_alignBottom="@id/logo"
            android:layout_marginStart="8dp"
            android:text="Santander"
            android:textColor="@android:color/white"
            android:textSize="31sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/contentBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-12dp"
        android:background="@android:color/white"
        android:padding="16dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_avatar_circle" />
        <TextView
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="X"
            android:textColor="@color/textMuted"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/avatar"
            android:text="Olá,"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/textStrong"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/nameCpf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hello"
            android:layout_toEndOf="@id/avatar"
            android:layout_marginTop="2dp"
            android:paddingLeft="10dp"
            android:text="RAFAEL NOGUEIRA SANTOS\nCPF: ***.***.***-14"
            android:textColor="@color/textMuted"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/labelSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameCpf"
            android:layout_marginTop="24dp"
            android:text="Insira sua senha para continuar"
            android:textStyle="bold"
            android:textColor="@color/textStrong"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/hintSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelSenha"
            android:layout_marginTop="20dp"
            android:text="Senha"
            android:textColor="@color/textMuted"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/inputSenha"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/hintSenha"
            android:inputType="textPassword"
            android:textColor="@color/textStrong"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:paddingEnd="8dp" />
        <CheckBox
            android:id="@+id/cbMostrarSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/inputSenha"
            android:text="mostrar"
            android:textColor="@color/textMuted"
            android:textSize="12sp" />
        <View
            android:id="@+id/underline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/inputSenha"
            android:background="@color/divider" />
        <Button
            android:id="@+id/btnProsseguir"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/underline"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/redBrand"
            android:text="PROSSEGUIR"
            app:cornerRadius="5dp" />
        <TextView
            android:id="@+id/linkEsqueci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnProsseguir"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="ESQUECI MINHA SENHA"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/redBrand" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp">
        <View
            android:id="@+id/centerDivider"
            android:layout_width="12dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent" />
        <Button
            android:id="@+id/btnNaoTenhoSenha"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/centerDivider"
            android:layout_marginEnd="6dp"
            android:backgroundTint="@color/bg"
            android:textColor="@color/textStrong"
            android:text="Não tenho senha" />
        <Button
            android:id="@+id/btnPedirCartao"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/centerDivider"
            android:layout_marginStart="6dp"
            android:backgroundTint="@color/bg"
            android:textColor="@color/textStrong"
            android:text="Pedir cartão" />
    </RelativeLayout>


</RelativeLayout>
